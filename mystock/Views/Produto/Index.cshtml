@model IEnumerable<MyStockProdutos.Models.Produto>

    @{
        ViewData["Title"] = "Produtos";
    }

    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Novo Produto</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Marca)</th>
                    <th>@Html.DisplayNameFor(model => model.PrecoVenda)</th>
                    <th>@Html.DisplayNameFor(model => model.QuantidadeEstoque)</th>
                    <th>Status Estoque</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model){
                    <tr>
                        <td>@Html.DisplayNameFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayNameFor(modelItem => item.Marca)</td>
                        <td>@Html.DisplayNameFor(modelItem => item.PrecoVenda)</td>
                        <td>@Html.DisplayNameFor(modelItem => item.QuantidadeEstoque)</td>
                        <td>
                            
                                @if (item.EstoqueBaixo){
                                    <span class="badge bg-warning">Estoque baixo</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">OK</span>
                                }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"></a>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>