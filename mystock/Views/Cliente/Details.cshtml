@using MyStockClientes.Models
@model MyStockClientes.Models.Cliente
@{
    ViewData["Title"] = "Detalhes do cliente";
}

<h1>@ViewData["Title"]</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Código do Cliente</dt>
    <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Model.NomeRazaoSocial</dd>

    <dt class="col-sm-3">Tipo</dt>
    <dd class="col-sm-9">@Model.Tipo</dd>

    <dt class="col-sm-3">CPF/CNPJ</dt>
    <dd class="col-sm-9">@Model.CpfCnpj</dd>

    <dt class="col-sm-3">Telefone</dt>
    <dd class="col-sm-9">@Model.Telefone</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Endereço</dt>
    <dd class="col-sm-9">@Model.Endereco</dd>

    <dt class="col-sm-3">Status do Cliente</dt>
    <dd class="col-sm-9">
        @if (Model.Status == StatusCliente.Ativo)
        {
            <span class="badge bg-success">Ativo</span>
        }
        else
        {
            <span class="badge bg-secondary">Inativo</span>
        }
    </dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>